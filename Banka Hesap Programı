#include<stdio.h>
#include<conio.h>
#include<math.h>
#include<stdlib.h>
void main()
{
	int paraMiktari=1000;
	char ad[5]="sait";//kendi belirledigim kullanici adi
	int sifre=123;//kendi belirledigim sifre
	printf("\t---HOSGELDINIZ---\n\n");
	printf("Kullanici Adi: ");
	gets(ad);
	printf("Kullanici Sifresi: ");
	scanf("%d",&sifre);
	printf("\n");
	if(ad[0]=='s' && ad[1]=='a'&& ad[2]=='i'&& ad[3]=='t' && ad[4]=='\0' && sifre==123)//kullanici adi ve sifre kontrol ediliyor
	{
		int islem=0;//kullanicinin sececegi islem degiskeni
		while(islem!=5)
		{
			
			int eklenecekPara;//2.islemde kullanilacak degisken
			int cekilecekPara;//4.islemde kullanilacak degisken
			int gonderilecekPara;//3.islemde kullanilacak degisken
			int gonderilecekHesap;//3. islemde gonderilecek hesabi tutan degisken
			printf("1- Para Miktari Goruntule\n2- Para Ekle\n3- Para Gonder\n4- Para Cek\n5- Cikis\nYapmak istediginiz islemi seciniz(1/2/3/4/5) ");
			scanf("%d",&islem);
			if(islem==1)
			{
				printf("\nHesabinizdaki para miktari=%d\n\n",paraMiktari);//para miktari goruntuleniyor
			}
			else if(islem==2)
			{
				printf("\nEklenecek para miktarini girin: ");
				scanf("%d",&eklenecekPara);
				paraMiktari+=eklenecekPara;//eklenecek para miktari, bakiyeye ekleniyor
				printf("Para ekleme islemi basariyla gerceklesmistir.\n\n");//kullaniciya islemin tamamlandigi mesaji veriliyor
			}
			else if(islem==3)
			{
				printf("\n");
				printf("Para gondereceginiz hesap no: ");
				scanf("%d",&gonderilecekHesap);//para gonderilece hesap numarasi isteniyor.
				printf("Gondermek istediginiz para miktarini girin: ");
				scanf("%d",&gonderilecekPara);
				if(gonderilecekPara>paraMiktari)//gonderilecek para miktarinin bakiyeden buyuk olup olmadigini kontrol eden yapi
					printf("Bakiyeniz yetersiz!\n\n");
				else
				{
					paraMiktari-=gonderilecekPara;//gonderilecek para, bakiyeden cikariliyor
					printf("%d hesabina para gonderme islemi basariyla gerceklesmistir.\n\n",gonderilecekHesap);//kullaniciya mesaj veriliyor
				}
			}
			else if(islem==4)
			{
				printf("\nCekmek istediginiz para miktarini girin: ");
				scanf("%d",&cekilecekPara);//cekilecek para miktari isteniyor
				if(cekilecekPara>paraMiktari)//cekilecek para miktarinin bakiyeden buyuk olup olmadigi kontrol ediliyor
					printf("Bakiye yetersiz!\n\n");
				else
				{
					paraMiktari-=cekilecekPara;//cekilecek para, bakiyeden cikariliyor
					printf("Para cekme islemi basariyla gerceklesmistir!\n\n");
				}
			}
			else
				break;
		}
	}
	else
		printf("Kullanici adi ya da sifre HATALI !!!");//kullanici adi veya sifre yanlissa, islem yapmadan hata mesaji veriliyor
	getch();

}
